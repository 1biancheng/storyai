# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_BASE_URL=https://your-resource.openai.azure.com/v1

# Kimi/Moonshot Configuration
KIMI_API_KEY=your_kimi_api_key_here
KIMI_API_BASE_URL=https://api.moonshot.cn/v1

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE_URL=https://api.deepseek.com/v1

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE_URL=https://api.anthropic.com/v1

# Mistral Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_BASE_URL=https://api.mistral.ai/v1

# 应用基本配置
APP_NAME=Story AI API
APP_VERSION=1.0.0
ENVIRONMENT=development

# 数据库配置
DATABASE__HOST=localhost
DATABASE__PORT=5432
DATABASE__NAME=story_ai
DATABASE__USERNAME=postgres
DATABASE__PASSWORD=your_password_here

# Redis配置
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__PASSWORD=
REDIS__DB=0
REDIS__ENABLED=true

# 兼容旧配置
DATABASE_URL=postgresql://user:password@localhost:5432/story_ai
REDIS_URL=redis://localhost:6379

# AI服务配置
AI__OPENAI_API_KEY=your_openai_api_key_here
AI__OPENAI_BASE_URL=https://api.openai.com/v1
AI__DEFAULT_MODEL=gpt-3.5-turbo
AI__MAX_TOKENS=2000
AI__TEMPERATURE=0.7
AI__ENABLE_DEV_EMBEDDINGS=true  # 开发环境:无密钥时启用伪嵌入回退

# 服务器配置
SERVER__HOST=127.0.0.1
SERVER__PORT=8000
SERVER__DEBUG=false
SERVER__RELOAD=false
SERVER__WORKERS=1

# 安全配置
SECURITY__SECRET_KEY=your_very_long_secret_key_at_least_32_characters_long_here
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
CORS__ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002"]
CORS__ALLOW_CREDENTIALS=true
CORS__ALLOW_METHODS=["*"]
CORS__ALLOW_HEADERS=["*"]

# 兼容旧配置
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# 缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# 兼容旧配置
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# 文件上传配置
# 上传目录(相对或绝对路径)
UPLOAD_DIR=./uploads
# 最大文件大小(字节),默认10MB
MAX_FILE_SIZE=10485760
